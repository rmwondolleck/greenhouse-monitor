# Greenhouse Monitor Configuration
# Copy this file to .env and modify as needed

# Server Configuration
PORT=3000

# Data Storage
GREENHOUSE_DATA_DIR=./data
MAX_DATA_ENTRIES=8760
DATA_SAVE_INTERVAL=300000

# Hardware Settings
# Set to "true" when running on actual Raspberry Pi hardware
RASPBERRY_PI=false

# System Protection
CPU_TEMP_THRESHOLD=80

# LCD Display Settings
LCD_SLEEP_START=21
LCD_SLEEP_END=9

# Development Settings
NODE_ENV=development

# MQTT Configuration for HomeAssistant Integration
# Enable/disable MQTT publishing
MQTT_ENABLED=false

# MQTT Broker Settings
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883

# MQTT Authentication (required when MQTT is enabled)
MQTT_USERNAME=mqtt-greenhouse
MQTT_PASSWORD=your_password_here

# MQTT Client Settings
MQTT_CLIENT_ID=greenhouse-monitor
MQTT_BASE_TOPIC=homeassistant

# Note: MQTT messages use retain=true for long-term data collection in HomeAssistant
# Data is queued locally and only deleted after successful MQTT delivery
# Queue expires after 7 days, but data remains in local historical storage

# GitHub Configuration (for issue creation scripts)
# Generate a personal access token with 'repo' scope at:
# https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here
GITHUB_OWNER=rmwondolleck
GITHUB_REPO=greenhouse-monitor

