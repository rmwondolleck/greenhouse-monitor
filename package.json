{
  "name": "greenhouse-monitor",
  "version": "1.0.0",
  "description": "Raspberry Pi Greenhouse Environmental Monitor with DHT11 sensor",
  "main": "dist/server.js",
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc --project tsconfig.server.json",
    "build:client": "vite build",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "NODE_ENV=development ts-node --project tsconfig.server.json src/server.ts",
    "dev:pi": "RASPBERRY_PI=true ts-node --project tsconfig.server.json src/server.ts",
    "start": "NODE_ENV=production node dist/server.js",
    "start:pi": "RASPBERRY_PI=true node dist/server.js",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit --project tsconfig.server.json && tsc --noEmit --project src/client",
    "test:mock": "NODE_ENV=development node -e \"console.log('Testing mock mode...'); require('./dist/server.js')\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "node-dht-sensor": "^0.4.3",
    "@oawu/lcd1602": "^1.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "lucide-react": "^0.263.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/node": "^20.5.0",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1",
    "concurrently": "^8.2.0",
    "vite": "^4.4.9",
    "@vitejs/plugin-react": "^4.0.4",
    "tailwindcss": "^3.3.3",
    "autoprefixer": "^10.4.15",
    "postcss": "^8.4.28"
  },
  "keywords": [
    "greenhouse",
    "raspberry-pi",
    "dht11",
    "environmental-monitoring",
    "typescript",
    "react"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  }
}