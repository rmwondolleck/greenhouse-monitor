# Greenhouse Monitor Configuration
# Copy this file to .env and modify as needed

# Server Configuration
PORT=3000

# Data Storage
GREENHOUSE_DATA_DIR=./data
MAX_DATA_ENTRIES=8760
DATA_SAVE_INTERVAL=300000

# Hardware Settings
# Set to "true" when running on actual Raspberry Pi hardware
RASPBERRY_PI=false

# System Protection
CPU_TEMP_THRESHOLD=80

# LCD Display Settings
LCD_SLEEP_START=21
LCD_SLEEP_END=9

# Development Settings
NODE_ENV=development
